<% provide(:title, 'ログイン') %>
  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
  </body>
<h1>Log in</h1>	
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>	
  <%= f.label :email %>	
  <%= f.email_field :email %>	
  <%= f.label :password %>	
  <%= f.password_field :password %>	
  <%= f.submit "Log in" %>	
<% end %>	
<p>登録がまだの方はこちら</p>
<p><%= link_to "新規登録", new_user_path %></p>
